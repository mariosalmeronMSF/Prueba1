<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemploRefreshView.MainPage">

    <RefreshView x:Name="refresh" RefreshColor="blue">
        <StackLayout Margin="0,500,0,0">
            <Button x:Name="refreshingActivado" Clicked="refreshingActivado_Clicked" Text="Activar"></Button>
            <Button x:Name="refreshingDesctivado" Clicked="refreshingDesctivado_Clicked" Text="Desactivar"></Button>
        </StackLayout>
    </RefreshView>

</ContentPage>
